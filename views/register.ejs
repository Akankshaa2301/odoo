<style>
    @import "https://use.fontawesome.com/releases/v5.5.0/css/all.css";

    body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background: url(https://images.wallpaperscraft.com/image/red_black_abstract_496_1600x900.jpg) no-repeat;
        background-size: cover;
    }

    .login-box {
        width: 280px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
    }

    .textbox,
    input {
        width: 100%;
        overflow: hidden;
        font-size: 20px;
        padding: 8px 0;
        margin: 8px 0;
        border-bottom: 1px solid #FF0000;
        background: transparent;
    }
    input,
    select,
    textarea {
        color: #FF0000;
    }
    .btn {
        text-decoration: none;
        width: 100%;
        background: none;
        border: 2px solid #FF0000;
        color: white;
        padding: 5px;
        font-size: 18px;
        cursor: pointer;
        margin: 12px 0;
    }
</style>
<body>
    <div class="login-box">

        <h1>Register</h1>
        <form action="/register" method="POST">
            <div>
                <i class="fas fa-user textbox">
                    <label for="name" style="font-family: sans-serif;">Name</label>
                </i>
                <input type="text" id="name" name="name" required>
            </div>
            <div>
                <i class="fa fa-mail-bulk">
                    <label for="email" style="font-family: sans-serif;">Email</label>
                </i>
                <input type="email" id="email" name="email" required>
            </div>
            <div>
                <i class="fa fa-lock textbook">    
                    <label for="password" style="font-family: sans-serif;">Password</label>
                </i>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit" class="btn">Register</button>
        </form>
        <a href="/login" class="btn">Login</a>
    </div>
</body>